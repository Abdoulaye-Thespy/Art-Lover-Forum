

<body class="login_page">
	
	 <p id="notice"><%= notice %></p>

 <p id=”alert”><%= alert %></p>

 <h1>Login</h1>

 <%= form_tag sessions_path do |form| %>

  <div>
   <%= label_tag(:username, "Enter Your Username:") %>
   <%= text_field_tag :username %>
  	
  </div>
  <%= submit_tag("Login") %>
<% end %>

<%= link_to 'Sign Up', new_user_path, class:'button is-link'%>
</body>